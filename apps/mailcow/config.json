{
  "$schema": "https://schemas.runtipi.io/v2/app-info.json",
  "name": "Mailcow",
  "id": "mailcow",
  "available": true,
  "short_desc": "Self-hosted mailserver suite",
  "author": "mailcow Project",
  "port": 9443,
  "categories": ["network", "utilities"],
  "description": "Mailcow is an all-in-one self-hosted mailserver stack (Postfix, Dovecot, Rspamd, SOGo, ACME) bundled with an admin UI and sensible defaults.",
  "tipi_version": 1,
  "version": "1.05",
  "source": "https://github.com/mailcow/mailcow-dockerized",
  "website": "https://mailcow.email/",
  "exposable": true,
  "supported_architectures": ["arm64", "amd64"],
  "created_at": 1764276308489,
  "updated_at": 1764276308489,
  "dynamic_config": true,
  "requirements": {
    "ports": [9443, 9080, 25, 465, 587, 993, 110, 995, 143, 4190, 10055],
    "volumes": [
      "${APP_DATA_DIR}/data",
      "${APP_DATA_DIR}/volumes/mysql",
      "${APP_DATA_DIR}/volumes/mysql-socket",
      "${APP_DATA_DIR}/volumes/redis",
      "${APP_DATA_DIR}/volumes/clamd-db",
      "${APP_DATA_DIR}/volumes/rspamd",
      "${APP_DATA_DIR}/volumes/vmail",
      "${APP_DATA_DIR}/volumes/vmail-index",
      "${APP_DATA_DIR}/volumes/crypt",
      "${APP_DATA_DIR}/volumes/postfix",
      "${APP_DATA_DIR}/volumes/postfix-tlspol",
      "${APP_DATA_DIR}/volumes/sogo-web",
      "${APP_DATA_DIR}/volumes/sogo-backup"
    ]
  },
  "form_fields": [
    { "type": "text", "label": "Timezone", "required": true, "env_variable": "TZ", "default": "Europe/Rome" },
    { "type": "password", "label": "MySQL root password", "required": true, "env_variable": "DBROOT" },
    { "type": "text", "label": "Database name", "required": true, "env_variable": "DBNAME", "default": "mailcow" },
    { "type": "text", "label": "Database user", "required": true, "env_variable": "DBUSER", "default": "mailcow" },
    { "type": "password", "label": "Database password", "required": true, "env_variable": "DBPASS" },
    { "type": "password", "label": "Redis password", "required": true, "env_variable": "REDISPASS" },
    { "type": "fqdn", "label": "Mailcow hostname", "required": true, "env_variable": "MAILCOW_HOSTNAME" },
    { "type": "number", "label": "HTTP port", "required": false, "env_variable": "HTTP_PORT", "default": 9080 },
    { "type": "number", "label": "HTTPS port", "required": false, "env_variable": "HTTPS_PORT", "default": 9443 },
    { "type": "number", "label": "Submission port", "required": false, "env_variable": "SUBMISSION_PORT", "default": 587 },
    { "type": "number", "label": "SMTPS port", "required": false, "env_variable": "SMTPS_PORT", "default": 465 },
    { "type": "number", "label": "IMAPS port", "required": false, "env_variable": "IMAPS_PORT", "default": 993 },
    { "type": "number", "label": "IMAP port", "required": false, "env_variable": "IMAP_PORT", "default": 143 },
    { "type": "number", "label": "POP3 port", "required": false, "env_variable": "POP_PORT", "default": 110 },
    { "type": "number", "label": "POP3S port", "required": false, "env_variable": "POPS_PORT", "default": 995 },
    { "type": "number", "label": "Sieve port", "required": false, "env_variable": "SIEVE_PORT", "default": 4190 },
    {
      "type": "text",
      "label": "Additional server names (space separated)",
      "required": false,
      "env_variable": "ADDITIONAL_SERVER_NAMES",
      "default": ""
    },
    { "type": "text", "label": "API key", "required": false, "env_variable": "API_KEY", "default": "invalid" },
    { "type": "text", "label": "API key (read only)", "required": false, "env_variable": "API_KEY_READ_ONLY", "default": "invalid" },
    { "type": "text", "label": "API allow from", "required": false, "env_variable": "API_ALLOW_FROM", "default": "invalid" },
    { "type": "text", "label": "Compose project name", "required": false, "env_variable": "COMPOSE_PROJECT_NAME", "default": "mailcow-dockerized" },
    { "type": "number", "label": "Log lines", "required": false, "env_variable": "LOG_LINES", "default": 9999 },
    { "type": "boolean", "label": "Enable IPv6", "required": false, "env_variable": "ENABLE_IPV6", "default": true },
    { "type": "boolean", "label": "Proxy protocol", "required": false, "env_variable": "NGINX_USE_PROXY_PROTOCOL", "default": false },
    { "type": "text", "label": "Trusted proxies (comma separated)", "required": false, "env_variable": "TRUSTED_PROXIES", "default": "" },
    { "type": "boolean", "label": "Skip Let's Encrypt", "required": false, "env_variable": "SKIP_LETS_ENCRYPT", "default": false },
    { "type": "boolean", "label": "Use watchdog", "required": false, "env_variable": "USE_WATCHDOG", "default": false }
  ],
  "min_tipi_version": "4.5.0"
}
