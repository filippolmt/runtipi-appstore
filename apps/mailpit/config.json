{
  "name": "Mailpit",
  "id": "mailpit",
  "available": true,
  "short_desc": "Email testing sandbox",
  "author": "Axllent",
  "port": 8025,
  "categories": ["utilities", "development"],
  "description": "Mailpit provides a modern web UI, searchable message storage, and SMTP server compatibility for capturing test emails in development.",
  "tipi_version": 18,
  "version": "v1.29.1",
  "source": "https://github.com/axllent/mailpit",
  "exposable": true,
  "supported_architectures": ["arm64", "amd64"],
  "created_at": 1764104133066,
  "updated_at": 1770932432397,
  "dynamic_config": true,
  "requirements": {
    "ports": [8025, 1025],
    "volumes": ["${APP_DATA_DIR}/data/mailpit"]
  },
  "form_fields": [
    {
      "type": "number",
      "label": "Max Stored Messages",
      "required": false,
      "env_variable": "MP_MAX_MESSAGES",
      "default": 5000
    },
    {
      "type": "number",
      "label": "SMTP Auth Accept Any (1 to enable, 0 to disable)",
      "required": false,
      "env_variable": "MP_SMTP_AUTH_ACCEPT_ANY",
      "default": 1
    },
    {
      "type": "number",
      "label": "SMTP Auth Allow Insecure (1 to enable, 0 to disable)",
      "required": false,
      "env_variable": "MP_SMTP_AUTH_ALLOW_INSECURE",
      "default": 1
    }
  ],
  "min_tipi_version": "4.5.0"
}
