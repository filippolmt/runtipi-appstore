{
  "schemaVersion": 2,
  "services": [
    {
      "name": "mailpit",
      "image": "axllent/mailpit:v1.28.0",
      "isMain": true,
      "internalPort": 8025,
      "environment": [
        {
          "key": "MP_MAX_MESSAGES",
          "value": 5000
        },
        {
          "key": "MP_DATABASE",
          "value": "/data/mailpit.db"
        },
        {
          "key": "MP_SMTP_AUTH_ACCEPT_ANY",
          "value": "${MP_SMTP_AUTH_ACCEPT_ANY:-1}"
        },
        {
          "key": "MP_SMTP_AUTH_ALLOW_INSECURE",
          "value": "${MP_SMTP_AUTH_ALLOW_INSECURE:-1}"
        }
      ],
      "addPorts": [
        {
          "containerPort": 1025,
          "hostPort": 1025,
          "tcp": true,
          "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}
