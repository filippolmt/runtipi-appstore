{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "n8n",
      "image": "n8nio/n8n:2.9.1",
      "isMain": true,
      "internalPort": 5678,
      "environment": [
        {
          "key": "N8N_EDITOR_BASE_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "N8N_SECURE_COOKIE",
          "value": "false"
        },
        {
          "key": "WEBHOOK_URL",
          "value": "${APP_PROTOCOL:-http}://${APP_DOMAIN}"
        },
        {
          "key": "N8N_ENCRYPTION_KEY",
          "value": "${N8N_ENCRYPTION_KEY}"
        },
        {
          "key": "DB_TYPE",
          "value": "postgresdb"
        },
        {
          "key": "DB_POSTGRESDB_HOST",
          "value": "n8n-db"
        },
        {
          "key": "DB_POSTGRESDB_PORT",
          "value": "5432"
        },
        {
          "key": "DB_POSTGRESDB_DATABASE",
          "value": "n8n"
        },
        {
          "key": "DB_POSTGRESDB_USER",
          "value": "n8n"
        },
        {
          "key": "DB_POSTGRESDB_PASSWORD",
          "value": "${N8N_NR_DB_PASSWORD}"
        },
        {
          "key": "N8N_DEFAULT_BINARY_DATA_MODE",
          "value": "filesystem"
        },
        {
          "key": "EXECUTIONS_MODE",
          "value": "queue"
        },
        {
          "key": "QUEUE_BULL_REDIS_HOST",
          "value": "n8n-redis"
        },
        {
          "key": "QUEUE_BULL_REDIS_PORT",
          "value": "6379"
        },
        {
          "key": "QUEUE_BULL_REDIS_PASSWORD",
          "value": "${N8N_REDIS_PASSWORD}"
        },
        {
          "key": "NODE_FUNCTION_ALLOW_BUILTIN",
          "value": "crypto"
        }
      ],
      "dependsOn": {
        "n8n-db": {
          "condition": "service_healthy"
        },
        "n8n-redis": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/n8n",
          "containerPath": "/home/node/.n8n"
        }
      ]
    },
    {
      "name": "n8n-worker",
      "image": "n8nio/n8n:2.9.1",
      "command": "worker",
      "environment": [
        {
          "key": "N8N_ENCRYPTION_KEY",
          "value": "${N8N_ENCRYPTION_KEY}"
        },
        {
          "key": "DB_TYPE",
          "value": "postgresdb"
        },
        {
          "key": "DB_POSTGRESDB_HOST",
          "value": "n8n-db"
        },
        {
          "key": "DB_POSTGRESDB_PORT",
          "value": "5432"
        },
        {
          "key": "DB_POSTGRESDB_DATABASE",
          "value": "n8n"
        },
        {
          "key": "DB_POSTGRESDB_USER",
          "value": "n8n"
        },
        {
          "key": "DB_POSTGRESDB_PASSWORD",
          "value": "${N8N_NR_DB_PASSWORD}"
        },
        {
          "key": "N8N_DEFAULT_BINARY_DATA_MODE",
          "value": "filesystem"
        },
        {
          "key": "EXECUTIONS_MODE",
          "value": "queue"
        },
        {
          "key": "QUEUE_BULL_REDIS_HOST",
          "value": "n8n-redis"
        },
        {
          "key": "QUEUE_BULL_REDIS_PORT",
          "value": "6379"
        },
        {
          "key": "QUEUE_BULL_REDIS_PASSWORD",
          "value": "${N8N_REDIS_PASSWORD}"
        },
        {
          "key": "NODE_FUNCTION_ALLOW_BUILTIN",
          "value": "crypto"
        }
      ],
      "dependsOn": {
        "n8n": {
          "condition": "service_started"
        },
        "n8n-db": {
          "condition": "service_healthy"
        },
        "n8n-redis": {
          "condition": "service_healthy"
        }
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/n8n",
          "containerPath": "/home/node/.n8n"
        }
      ]
    },
    {
      "name": "n8n-db",
      "image": "postgres:18.2",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "tipi"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${N8N_DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "n8n"
        },
        {
          "key": "POSTGRES_NON_ROOT_USER",
          "value": "n8n"
        },
        {
          "key": "POSTGRES_NON_ROOT_PASSWORD",
          "value": "${N8N_NR_DB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/init-data.sh",
          "containerPath": "/docker-entrypoint-initdb.d/init-data.sh"
        }
      ],
      "healthCheck": {
        "interval": "5s",
        "timeout": "5s",
        "retries": 10,
        "test": "pg_isready -h localhost -U $$POSTGRES_USER -d $$POSTGRES_DB"
      }
    },
    {
      "name": "n8n-redis",
      "image": "redis:8.4-alpine",
      "command": "redis-server --requirepass ${N8N_REDIS_PASSWORD}",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/redis",
          "containerPath": "/data"
        }
      ],
      "healthCheck": {
        "test": "redis-cli -a $$N8N_REDIS_PASSWORD ping | grep PONG",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "10s"
      },
      "environment": [
        {
          "key": "N8N_REDIS_PASSWORD",
          "value": "${N8N_REDIS_PASSWORD}"
        }
      ]
    }
  ]
}
