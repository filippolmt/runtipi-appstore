{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "nocobase",
      "image": "nocobase/nocobase:2.0.0-full",
      "isMain": true,
      "internalPort": 80,
      "dependsOn": {
        "nocobase-db": {
          "condition": "service_healthy"
        }
      },
      "environment": [
        {
          "key": "APP_KEY",
          "value": "${APP_KEY}"
        },
        {
          "key": "DB_DIALECT",
          "value": "postgres"
        },
        {
          "key": "DB_HOST",
          "value": "nocobase-db"
        },
        {
          "key": "DB_PORT",
          "value": "5432"
        },
        {
          "key": "DB_DATABASE",
          "value": "nocobase"
        },
        {
          "key": "DB_USER",
          "value": "nocobase"
        },
        {
          "key": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/app/nocobase/storage"
        }
      ]
    },
    {
      "name": "nocobase-db",
      "image": "postgres:16-alpine",
      "command": "postgres -c wal_level=logical",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "nocobase"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "nocobase"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U nocobase -d nocobase",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s"
      }
    }
  ]
}
