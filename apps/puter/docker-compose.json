{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "puter",
      "image": "ghcr.io/heyputer/puter:v2.5.1",
      "isMain": true,
      "internalPort": 4100,
      "environment": [{ "key": "PUID", "value": "${PUID:-1000}" }, { "key": "PGID", "value": "${PGID:-1000}" }],
      "addPorts": [
        {
          "hostPort": 4100,
          "containerPort": 4100,
          "tcp": true,
          "udp": false
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/etc/puter",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/puter",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "wget --no-verbose --tries=1 --spider http://127.0.0.1:4100/test || exit 1",
        "interval": "30s",
        "timeout": "3s",
        "retries": 3,
        "startPeriod": "30s"
      }
    }
  ]
}
