{
  "schemaVersion": 2,
  "services": [
    {
      "name": "puter",
      "image": "ghcr.io/heyputer/puter:2.5.1",
      "isMain": true,
      "environment": [
        {
          "key": "PUID",
          "value": 1000
        },
        {
          "key": "PGID",
          "value": 1000
        }
      ],
      "internalPort": 4100,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/etc/puter",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/puter",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}
