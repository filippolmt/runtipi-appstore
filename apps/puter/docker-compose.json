{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "puter",
      "image": "ghcr.io/heyputer/puter:2.5.1",
      "isMain": true,
      "user": "root",
      "internalPort": 4100,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/etc/puter"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/puter",
          "containerPath": "/var/puter"
        }
      ],
      "healthCheck": {
        "test": "wget --no-verbose --tries=1 --spider http://puter.localhost:4100/test || exit 1",
        "interval": "30s",
        "timeout": "3s",
        "retries": 3,
        "startPeriod": "30s"
      }
    }
  ]
}
