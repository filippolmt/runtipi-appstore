{
  "schemaVersion": 2,
  "services": [
    {
      "name": "puter",
      "image": "ghcr.io/heyputer/puter:2.5.1",
      "isMain": true,
      "environment": [
        {
          "key": "PUID",
          "value": "${PUID}"
        },
        {
          "key": "PGID",
          "value": "${PGID}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "DOMAIN",
          "value": "${DOMAIN}"
        },
        {
          "key": "ALLOW_ALL_HOST_VALUES",
          "value": "${ALLOW_ALL_HOST_VALUES}"
        }
      ],
      "internalPort": 4100,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/etc/puter",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/puter",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}
