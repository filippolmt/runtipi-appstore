{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "workout-cool",
      "image": "ghcr.io/snouzy/workout-cool:v1.3.2",
      "isMain": true,
      "internalPort": 3000,
      "dependsOn": {
        "workout-cool-db": {
          "condition": "service_healthy"
        }
      },
      "environment": [
        {
          "key": "DATABASE_URL",
          "value": "postgresql://workout:${DB_PASSWORD}@workout-cool-db:5432/workout-cool"
        },
        {
          "key": "BETTER_AUTH_URL",
          "value": "http://localhost:3000"
        },
        {
          "key": "BETTER_AUTH_SECRET",
          "value": "${BETTER_AUTH_SECRET}"
        },
        {
          "key": "SEED_SAMPLE_DATA",
          "value": "${SEED_SAMPLE_DATA}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/data"
        }
      ]
    },
    {
      "name": "workout-cool-db",
      "image": "postgres:16-alpine",
      "environment": [
        {
          "key": "POSTGRES_USER",
          "value": "workout"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "workout-cool"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/db",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U workout -d workout-cool",
        "interval": "10s",
        "timeout": "5s",
        "retries": 5,
        "startPeriod": "30s"
      }
    }
  ]
}
