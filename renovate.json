{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "prHourlyLimit": 20,
  "extends": ["config:recommended"],
  "rebaseWhen": "conflicted",
  "enabledManagers": ["custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^.*docker-compose\\.json$/"],
      "matchStrings": ["\"image\": \"(?<depName>.*?):(?<currentValue>.*?)\","],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/budibase/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "budibase/budibase",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/mailcow/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "ghcr.io/mailcow/nginx",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/kitchenowl/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "tombursch/kitchenowl",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/mailpit/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "axllent/mailpit",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/nginx/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "nginx",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/puter/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "ghcr.io/heyputer/puter",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["apps/traccar/config.json"],
      "matchStrings": ["\"version\": \"(?<currentValue>.*?)\""],
      "depNameTemplate": "traccar/traccar",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["automerge"]
    },
    {
      "matchPackageNames": ["mariadb", "mysql", "mongodb", "postgres", "redis"],
      "enabled": false
    },
    {
      "matchPackageNames": ["n8nio/n8n", "goauthentik/authentik"],
      "enabled": false
    }
  ]
}
